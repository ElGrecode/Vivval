<div id="home_wrapper">
  <header>
    <div></div>
    <% if current_user %>
      <%= link_to "Log out", session_path, method: :delete, class: 'logout btn' %>
    <% else %>
      <%= link_to "Sign up", root_path, class: 'signup btn' %>
      <%= link_to "Log in", "#", class: 'login btn' %>
    <% end %>  
  </header>
  

  <h1>App Mockup</h1>

  <%= render partial: 'sessions/sessions_form' %>

  <footer>
    <% if current_user %>
      <h3>
        Welcome, <%= current_user.first_name %>!
      </h3>
    <% end %>
    Links and User Info for testing
  </footer>
</div>

