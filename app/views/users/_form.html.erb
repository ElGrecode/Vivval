<%= form_for @user do |f| %>
    <div class="first-container">
      Name <%= f.text_field :first_name, placeholder: 'First', class: 'first_name'%>
    </div>
    <div class="last-container">
      <%= f.text_field :last_name, placeholder: "Last", class: 'last_name'%>
    </div>
    <%= f.hidden_field :email, :value => @temporary_user.email %>
    <div class="password-container">Password <%= f.password_field :password, placeholder: "Password", class: 'password', id: 'password'%></div>
    <div class="confirmation-container"><%= f.password_field :password_confirmation, placeholder: "Confirmation", class: 'confirmation', 'data-name' => 'password_confirmation'%></div><br>
  <div class="actions">
    <%= f.submit 'Begin Exploring' %>
  </div>
<% end %>
