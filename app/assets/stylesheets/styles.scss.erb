body {
  background: url(<%= asset_data_uri 'lander_background.jpg'%>);
  background-size: cover;
  background-position: top right;
  font-family: 'Istok Web', sans-serif;
  font-size: 16px;
}

h1, h2 {
  color: #cd7748;
}

h1 {

}

h2 {
  font-size: 2.4em;
  font-weight: normal;
  -webkit-margin-before: 0em;
  -webkit-margin-after: 0.5em;
}

a {
  color: inherit;
  text-decoration: none;
}

/***************  Lander  ***************/
#lander_wrapper {
  h1 {
    position: absolute;
    margin-left: -9999px;
  }

  a.signIn {
    color: #4e8586;
  }
}

.requestInvite {
  width: 400px;
  height: 300px;
  text-align: center;
  float: right;
  margin-top: 200px;
  margin-right: 100px;
}

.new_temporary_user {
  margin-bottom: 10px;

  input {
    border-radius: 3px;
    border: none;
  }

  ::-webkit-input-placeholder {
    color: rgba(129, 140, 141, .7);
    font-style: italic;
  }

  :-moz-placeholder { /* Firefox 18- */
    color: rgba(129, 140, 141, .7);
    font-style: italic;
  }

  ::-moz-placeholder {  /* Firefox 19+ */
    color: rgba(129, 140, 141, .7);
    font-style: italic;
  }

  :-ms-input-placeholder {  
    color: rgba(129, 140, 141, .7);
    font-style: italic;
  }

  input:focus {
    outline-offset: 0px;
    outline: none;
    box-shadow: 0px 0px 2px 1px rgba(211, 111, 61, .2);
  }

  input[type=email] {
    width: 230px;
    height: 2.6em;
    padding: 5px;
    font-size: .8em;
    font-style: normal; 
    color: #818c8d;
    text-align: center;
    border: none;
    background: #334555;
    margin: 0 0 10px 0; 
  }

  input[type=submit] {
    height: 42px;
    padding: 12px;
    font-size: .8em;
    color: #579794;
    background: none;
    border: 1px solid #579794;
  }

  input[type=submit]:hover {
    color: rgb(45, 57, 81);
    background: #579794;
  }

  
}